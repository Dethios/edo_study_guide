    "Wolfson"
  ],

  // ===================================================================
  // EDITOR — CORE
  // ===================================================================
  "editor.aiStats.enabled": true,
  "editor.allowVariableFontsInAccessibilityMode": true,
  "editor.autoIndentOnPaste": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeActions.triggerOnFocusChange": true,
  "editor.codeActionsOnSave": {},
  "editor.codeLensFontFamily": "Fira Code",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 12,
  "editor.fontVariations": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "editor.formatOnType": true,
  "editor.indentSize": "tabSize",
  "editor.insertSpaces": true,
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.fontFamily": "'Fira Code'", // keep ghost font = editor font
  "editor.inlineSuggest.showToolbar": "onHover",
  "editor.linkedEditing": true,
  "editor.maxTokenizationLineLength": 200000,
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.smoothScrolling": true,
  "editor.stickyTabStops": true,
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.trimWhitespaceOnDelete": true,
  "editor.wordBasedSuggestions": "matchingDocuments", // tighter & faster on big repos
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 100,
  "editor.wrappingIndent": "indent",
  "editor.wrapOnEscapedLineFeeds": true,

  // ===================================================================
  // EVEN BETTER TOML
  // ===================================================================
  "evenBetterToml.formatter.alignComments": true,
  "evenBetterToml.formatter.alignEntries": true,
  "evenBetterToml.formatter.allowedBlankLines": 1,
  "evenBetterToml.formatter.arrayAutoCollapse": true,
  "evenBetterToml.formatter.arrayAutoExpand": true,
  "evenBetterToml.formatter.arrayTrailingComma": true,
  "evenBetterToml.formatter.columnWidth": 100,
  "evenBetterToml.formatter.indentEntries": true,
  "evenBetterToml.formatter.indentTables": true,
  "evenBetterToml.formatter.reorderArrays": true,
  "evenBetterToml.formatter.reorderInlineTables": true,
  "evenBetterToml.formatter.reorderKeys": true,
  "evenBetterToml.formatter.trailingNewline": true,
  "evenBetterToml.schema.links": true,
  "evenBetterToml.semanticTokens": true,

  // ===================================================================
  // FILES & SEARCH
  // ===================================================================
  "files.autoGuessEncoding": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.autoSaveWhenNoErrors": true,
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/.texlive202*/**": true,
    "**/build/**": true,
    "**/node_modules/**": true,
    "**/out/**": true
  },
  "search.exclude": {
    "**/.git/**": true,
    "**/.texlive202*/**": true,
    "**/build/**": true,
    "**/node_modules/**": true,
    "**/out/**": true
  },
  "search.followSymlinks": false,
  "search.useIgnoreFiles": true,
  "git.autofetch": true, // reliable & fast
  "git.autofetchPeriod": 180, // seconds
  "git.autoStash": true,
  "git.enableSmartCommit": true,
  "git.mergeEditor": true,
  "git.pruneOnFetch": true,
  "git.replaceTagsWhenPull": true,
  "git.repositoryScanMaxDepth": 2, // avoid slow -1 on big drives

  // ===================================================================
  // GITLENS
  // ===================================================================
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",

  // ===================================================================
  // JAVASCRIPT / TYPESCRIPT
  // ===================================================================
  "javascript.referencesCodeLens.enabled": true,
  "javascript.referencesCodeLens.showOnAllFunctions": true,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.implementationsCodeLens.showOnInterfaceMethods": true,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.referencesCodeLens.showOnAllFunctions": true,

  // ===================================================================
  // JSON / YAML / NPM
  // ===================================================================
  "json.schemaDownload.enable": false,
  "npm.fetchOnlinePackageInfo": false,
  "npm.runSilent": true,
  "yaml.format.printWidth": 100,
  "yaml.format.proseWrap": "always",
  "yaml.keyOrdering": true,

  // ===================================================================
  // LATEX — LATEX WORKSHOP (viewer/sync)
  // ===================================================================
  "latex-workshop.latex.auxDir": "build",
  "latex-workshop.latex.outDir": "out",
  "latex-workshop.latex.rootFile.doNotPrompt": true,
  "latex-workshop.latex.rootFile.useSubFile": true,
  "latex-workshop.synctex.afterBuild.enabled": true,
  "latex-workshop.texmagic.enabled": true,
  "latex-workshop.view.outline.sync.viewer": true,
  "latex-workshop.view.pdf.internal.synctex.keybinding": "ctrl-click",
  "latex-workshop.view.pdf.reload.transition": "none",
  "latex-workshop.view.pdf.sidebar.open": "off",
  "latex-workshop.view.pdf.sidebar.view": "outline",
  "latex-workshop.view.pdf.viewer": "tab",

  // LATEX — LATEX WORKSHOP (build/recipes)
  "latex-workshop.latex.autoBuild.interval": 5000,
  "latex-workshop.latex.autoBuild.run": "never", // you build via scripts/recipes
  "latex-workshop.latex.build.clearLog.everyRecipeStep.enabled": false,
  "latex-workshop.latex.build.forceRecipeUsage": true,
  "latex-workshop.latex.build.rootfileInStatus": true,
  "latex-workshop.latex.clean.subfolder.enabled": true,
  "latex-workshop.latex.autoClean.run": "never",
  "latex-workshop.latex.recipes": [
    { "name": "BUILD-WIN", "tools": ["latexmk-win"] },
    { "name": "BUILD-WSL", "tools": ["latexmk-wsl"] },
    { "name": "AUTO (latexmk-auto)", "tools": ["latexmk-auto"] },
    { "name": "ON-THE-FLY", "tools": ["texliveonfly"] }
  ],
  "latex-workshop.latex.recipe.default": "lastUsed",
  "latex-workshop.latex.tools": [
    {
      "args": [
        "-lualatex",
        "-outdir=out",
        "-auxdir=build",
        "-f",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-shell-escape",
        "%DOC%"
      ],
      "command": "tools/latexmk-universal.sh",
      "name": "latexmk-wsl"
    },
    {
      "args": [
        "-lualatex",
        "-outdir=out",
        "-auxdir=build",
        "-f",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-shell-escape",
        "%DOC%"
      ],
      "command": "latexmk",
      "name": "latexmk-win"
    },
    {
      "args": ["%DOC%"],
      "command": "/usr/local/texlive/2025/bin/aarch64-linux/latexmk-auto",
      "name": "latexmk-auto"
    },
    {
      "args": ["%DOC%"],
      "command": "/usr/local/texlive/2025/bin/aarch64-linux/texliveonfly",
      "name": "texliveonfly"
    }
  ],

  // LATEX — LATEX WORKSHOP (formatting/lint/intellisense/watch)
  "latex-workshop.bibtex-fields.sort.enabled": true,
  "latex-workshop.bibtex-format.sort.enabled": true,
  "latex-workshop.bibtex-format.tab": "2",
  "latex-workshop.bibtex-format.trailingComma": true,
  "latex-workshop.formatting.latex": "latexindent",
  "latex-workshop.formatting.latexindent.args": [
    "-w",
    "-s",
    "-m",
    "-y=backupExtension:'';defaultIndent:'  ';preserveBlankLines:2",
    "--overwriteIfDifferent",
    "--outputdir=/dev/null"
  ],
  "latex-workshop.formatting.latexindent.path": "latexindent",
  "latex-workshop.intellisense.bibtexJSON.replace": {},
  "latex-workshop.intellisense.package.unusual": true,
  "latex-workshop.intellisense.subsuperscript.enabled": true,
  "latex-workshop.intellisense.unimathsymbols.enabled": true,
  "latex-workshop.intellisense.update.aggressive.enabled": true,
  "latex-workshop.latex.watch.pdf.delay": 1000,
  "latex-workshop.latex.watch.usePolling": true,
  "latex-workshop.linting.chktex.convertOutput.column.chktexrcTabSize": 4,
  "latex-workshop.linting.run": "onType",
  "latex-workshop.message.badbox.show": "none",
  "latex-workshop.message.information.show": true,
  "latex-workshop.message.log.show": true,

  // LATEX — LANGUAGE OVERRIDES
  "[bibtex]": { "editor.defaultFormatter": "James-Yu.latex-workshop" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop",
    "editor.formatOnSave": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },

  // LATEX — LATEX UTILITIES
  "latex-utilities.formattedPaste.maxLineLength": 100,
  "latex-utilities.formattedPaste.useAsDefault": true,
  "latex-utilities.liveReformat.enabled": true,
  "latex-utilities.liveReformat.languages": ["tex", "doctex", "latex", "rsweave", "jlweave"],
  "latex-utilities.liveReformat.snippets": [
    {
      "body": "$1_$2",
      "description": "auto subscript",
      "mode": "maths",
      "prefix": "([A-Za-z}\\)\\]])(\\d)$",
      "triggerWhenComplete": true
    },
    {
      "body": "$1_{$2}",
      "description": "auto escape subscript",
      "mode": "maths",
      "prefix": "([A-Za-z}\\)\\]]) ?_(\\d\\d)$",
      "triggerWhenComplete": true
    },
    {
      "body": "$1$2",
      "description": "remove extraneous sub/superscript space",
      "mode": "maths",
      "prefix": "(\\S) ([\\^_])$",
      "priority": 2,
      "triggerWhenComplete": true
    },
    {
      "body": "$1^{$2}",
      "description": "auto escape superscript",
      "mode": "maths",
      "prefix": "([A-Za-z}\\)\\]]) ?\\^ ?(\\d\\d|[\\+\\-] ?(?:\\d|[A-Za-z]|\\\\\\w+))$",
      "priority": 2,
      "triggerWhenComplete": true
    },
    {
      "body": "$1 $2",
      "description": "whitespace before operators",
      "mode": "maths",
      "prefix": "([^ &\\\\\\+\\-=<>\\|!~@])([\\+\\-=<>])$",
      "priority": -1,
      "triggerWhenComplete": true
    },
    {
      "body": "$1 $2",
      "description": "whitespace after operators",
      "mode": "maths",
      "prefix": "([\\+\\-=<>])([^ &\\\\\\+\\-=<>\\|!~])$",
      "priority": -1,
      "triggerWhenComplete": true
    },
    {
      "body": "\\dots ",
      "description": "⋯",
      "mode": "maths",
      "prefix": "\\.\\.\\.$",
      "triggerWhenComplete": true
    },
    {
      "body": "\\implies ",
      "description": "⇒",
      "mode": "maths",
      "prefix": "=>$",
      "triggerWhenComplete": true
    },
    {
      "body": "\\impliedby ",
      "description": "implied by",
      "mode": "maths",
      "prefix": "=<$",
      "triggerWhenComplete": true
    },
    {
      "body": "\\frac{$1}{$2} ",
      "description": "fraction (empty)",
      "mode": "maths",
      "prefix": "//$",
      "triggerWhenComplete": true
    },
    {
      "body": "\\frac{$1}{$1}$0",
      "description": "fraction (from regex)",
      "mode": "maths",
      "prefix": "(([\\d\\.]+)|([\\d\\.]*)(\\\\)?([A-Za-z]+)((\\^|_)(\\{\\d+\\}|\\d|[A-Za-z]|\\\\\\w+))*!?)\\/$",
      "triggerWhenComplete": true
    },
    {
      "body": "SPECIAL_ACTION_FRACTION",
      "description": "fraction (parsed)",
      "mode": "maths",
      "noPlaceholders": false,
      "prefix": "([\\)\\]}]) ?/$",
      "triggerWhenComplete": true
    },
    {
      "body": "sympy $1 sympy",
      "description": "sympy block",
      "mode": "maths",
      "prefix": "sympy$",
      "triggerWhenComplete": false
    },
    {
      "body": "SPECIAL_ACTION_BREAK",
      "mode": "maths",
      "prefix": "sympy.+$",
      "priority": 2,
      "triggerWhenComplete": true
    },
    {
      "body": "SPECIAL_ACTION_SYMPY",
      "description": "sympy",
      "mode": "maths",
      "prefix": "sympy ?(.+?) ?sympy ?$",
      "priority": 3,
      "triggerWhenComplete": true
    },
    {
      "body": "$1\\iff ",
      "description": "⇔",
      "mode": "maths",
      "prefix": "(^|[^\\\\])\\biff$",
      "triggerWhenComplete": true
    },
    {
      "body": "$1\\in ",
      "description": "in",
      "mode": "maths",
      "prefix": "(^|[^\\\\])\\binn$",
      "triggerWhenComplete": true
    },
    {
      "body": "$1\\not\\in ",
      "description": "∈",
      "mode": "maths",
      "prefix": "(^|[^\\\\])\\bnotin$",
      "triggerWhenComplete": true
    },
    {
      "body": " \\neq ",
      "description": "neq",
      "mode": "maths",
      "prefix": " ?!=$",
      "triggerWhenComplete": true
    },
    {
      "body": "&= ",
      "description": "aligned equal",
      "mode": "maths",
      "prefix": "==$",
      "priority": 1,
      "triggerWhenComplete": true
    },
    {
      "body": " \\approx ",
      "description": "≈",
      "mode": "maths",
      "prefix": " ?~=$",
      "triggerWhenComplete": true
    },
    {
      "body": " \\sim ",
      "description": "∼",
      "mode": "maths",
      "prefix": " ?~~$",
      "triggerWhenComplete": true
    },
    {
      "body": " \\geq ",
      "description": "≥",
      "mode": "maths",
      "prefix": " ?>=$",
      "triggerWhenComplete": true
    },
    {
      "body": " \\leq ",
      "description": "≤",
      "mode": "maths",
      "prefix": " ?<=$",
      "triggerWhenComplete": true
    },
    {
      "body": " \\gg ",
      "description": "≫",
      "mode": "maths",
      "prefix": " ?>>$",
      "triggerWhenComplete": true
    },
    {
      "body": " \\ll ",
      "description": "≪",
      "mode": "maths",
      "prefix": " ?<<$",
      "triggerWhenComplete": true
    },
    {
      "body": " \\times ",
      "description": "×",
      "mode": "maths",
      "prefix": " ?xx$",
      "triggerWhenComplete": true
    },
    {
      "body": " \\cdot ",
      "description": "⋅",
      "mode": "maths",
      "prefix": " ?\\*\\*$",
      "triggerWhenComplete": true
    },
    {
      "body": "$1\\to ",
      "description": "→",
      "mode": "maths",
      "prefix": "(^|[^\\\\]\\b|[ ,\\)\\]\\}]\\w*)(to|->)$",
      "triggerWhenComplete": true
    },
    {
      "body": " \\mapsto ",
      "description": "↦",
      "mode": "maths",
      "prefix": " ?(?:\\|->|!>)$",
      "priority": 1.1,
      "triggerWhenComplete": true
    },
    {
      "body": "$1\\arc$2 ",
      "description": "arc(trig)",
      "mode": "maths",
      "prefix": "(^|[^\\\\])a(?:rc)?(sin|cos|tan|cot|csc|sec)$",
      "triggerWhenComplete": true
    },
    {
      "body": "$1\\$2 ",
      "description": "un-backslashed operator",
      "mode": "maths",
      "prefix": "(^|[^\\\\])(sin|cos|tan|cot|csc|sec|min|max|log|exp)$",
      "triggerWhenComplete": true
    },
    {
      "body": "$1\\$2",
      "description": "pi",
      "mode": "maths",
      "prefix": "(^|[^\\\\])(pi)$",
      "triggerWhenComplete": true
    },
    {
      "body": "\\vec{$1}",
      "description": "vector",
      "mode": "maths",
      "prefix": "((?:\\b|\\\\)\\w{1,7})(,\\.|\\.,)$",
      "triggerWhenComplete": true
    },
    {
      "body": "\\tilde{$1}",
      "description": "tilde",
      "mode": "maths",
      "prefix": "(\\\\?[\\w\\^]{1,7})~ $",
      "triggerWhenComplete": true
    },
    {
      "body": "\\dot{$1}",
      "description": "dot",
      "mode": "maths",
      "prefix": "(\\\\?[\\w\\^]{1,7})\\. $",
      "triggerWhenComplete": true
    },
    {
      "body": "\\ddot{$1}",
      "description": "ddot",
      "mode": "maths",
      "prefix": "(\\\\?[\\w\\^]{1,7})\\.\\. $",
      "triggerWhenComplete": true
    },
    {
      "body": "\\overline{$1}",
      "description": "overline",
      "mode": "maths",
      "prefix": "\\bbar$",
      "triggerWhenComplete": true
    },
    {
      "body": "\\overline{$1}",
      "description": "overline",
      "mode": "maths",
      "prefix": "\\b(\\\\?[\\w\\^{}]{1,3})bar$",
      "triggerWhenComplete": true
