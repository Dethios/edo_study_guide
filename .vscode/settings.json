{
  "git.openRepositoryOnStart": "always",
  "git.autofetch": true,
  "git.autofetchPeriod": 180, // seconds (3 min)
  "git.postCommitCommand": "sync",

  "latex-workshop.latex.autoBuild.run": "never",

  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "tools/latexmk-universal.sh",
      "args": [
        "-lualatex",
        "-outdir=out",
        "-auxdir=build",
        "-f",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-shell-escape",
        "%DOC%"
      ]
    },
    {
      "name": "latexmk-auto",
      "command": "/usr/local/texlive/2025/bin/aarch64-linux/latexmk-auto",
      "args": ["%DOC%"]
    },
    {
      "name": "texliveonfly",
      "command": "/usr/local/texlive/2025/bin/aarch64-linux/texliveonfly",
      "args": ["%DOC%"]
    }
  ],

  "latex-workshop.latex.recipes": [
    { "name": "BUILD", "tools": ["latexmk"] },
    { "name": "BUILD (auto-install)", "tools": ["latexmk-auto"] }
  ],
  "latex-workshop.latex.recipe.default": "BUILD",

  // Use universal wrapper so formatting works on both machines
  "latex-workshop.formatting.latexindent.path": "tools/latexindent-universal.sh",
  "latex-workshop.formatting.latexindent.args": [
    "-w",
    "-s",
    "-m",
    "-l",
    "preserveBlankLines:2,backupExtension:''"
  ]
}
