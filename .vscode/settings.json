  // ===================================================================
  // 2. EDITOR EXPERIENCE Ã¢â‚¬â€ fonts, wrapping, suggestions, and automation
  // ===================================================================
  // Indentation and whitespace discipline.
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.indentSize": "tabSize",
  "editor.insertSpaces": true,
  "editor.stickyTabStops": true,
  "editor.autoIndentOnPaste": true,
  "hungryDelete.considerIncreaseIndentPattern": true,

  // Font and rendering polish.
  "editor.fontFamily": "'Fira Code', 'Source Code Pro', 'Cascadia Code', Consolas, 'Courier New', monospace",
  "editor.codeLensFontFamily": "'Source Code Pro'",
  "editor.fontLigatures": true,
  "editor.fontVariations": true,
  "editor.allowVariableFontsInAccessibilityMode": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.maxTokenizationLineLength": 200000,
  "editor.minimap.enabled": false,
  "editor.minimap.maxColumn": 50,

  // Wrapping keeps long acquisition cites readable.
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 100,
  "editor.wrappingIndent": "indent",
  "editor.wrapOnEscapedLineFeeds": true,

  // Suggestions and inline assists tuned for Gemini + Prettier.
  "editor.inlineSuggest.enabled": true,
